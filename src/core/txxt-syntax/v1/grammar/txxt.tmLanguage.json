{
  "name": "txxt",
  "scopeName": "text.txxt",
  "patterns": [
    {
      "name": "meta.block.paragraph.txxt",
      "begin": "^[^\\n]+$",
      "end": "^\\s*$",
      "patterns": [
        {
          "name": "text.paragraph.txxt",
          "match": ".+"
        }
      ]
    },
    {
      "name": "meta.block.title.txxt",
      "begin": "^(\\d+(?:\\.\\d+)*\\.|\\d+\\.(?:[a-z]|i+)\\.|:)\\s+[^\\n]+$",
      "end": "^\\s*$",
      "patterns": [
        {
          "name": "markup.heading.sequence.txxt",
          "match": "^(\\d+(?:\\.\\d+)*\\.|\\d+\\.(?:[a-z]|i+)\\.)",
          "captures": {
            "1": {
              "name": "markup.heading.sequence.number.txxt"
            }
          }
        },
        {
          "name": "markup.heading.colon.txxt",
          "match": "^:"
        },
        {
          "name": "markup.heading.content.txxt",
          "match": "(?<=\\d+(?:\\.\\d+)*\\.|\\d+\\.(?:[a-z]|i+)\\.|:)\\s+(.+)$"
        }
      ]
    },
    {
      "name": "meta.block.indented.txxt",
      "begin": "^\\s+[^\\n]+$",
      "end": "^\\s*$",
      "patterns": [
        {
          "name": "markup.indented.whitespace.txxt",
          "match": "^\\s+",
          "captures": {
            "0": {
              "name": "markup.indented.level.txxt"
            }
          }
        },
        {
          "name": "markup.indented.content.txxt",
          "match": "^\\s+(.+)$"
        }
      ]
    },
    {
      "name": "meta.block.template.txxt",
      "begin": "^\\d+\\.\\s+[^\\n]+$",
      "end": "^\\s*$",
      "patterns": [
        {
          "name": "markup.template.sequence.txxt",
          "match": "^(\\d+)\\.",
          "captures": {
            "1": {
              "name": "markup.template.sequence.number.txxt"
            }
          }
        },
        {
          "name": "markup.template.content.txxt",
          "match": "(?<=\\d+\\.)\\s+(.+)$"
        }
      ]
    }
  ]
}
