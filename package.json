{
  "name": "txxt-format",
  "displayName": "txxt Format",
  "description": "Syntax highlighting for txxt format",
  "version": "0.5.0",
  "type": "module",
  "publisher": "txxt",
  "engines": {
    "vscode": "^1.60.0"
  },
  "exports": {
    ".": {
      "types": "./dist/extension.d.ts",
      "default": "./dist/extension.js"
    },
    "./core": {
      "types": "./dist/core/api.d.ts",
      "default": "./dist/core/api.js"
    },
    "./features": {
      "types": "./dist/features/index.d.ts",
      "default": "./dist/features/index.js"
    }
  },
  "categories": [
    "Programming Languages"
  ],
  "keywords": [
    "txxt",
    "documentation",
    "plain text",
    "syntax highlighting"
  ],
  "contributes": {
    "languages": [
      {
        "id": "txxt",
        "aliases": [
          "txxt",
          "txxt"
        ],
        "extensions": [
          ".txtx",
          ".rfc"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "txxt",
        "scopeName": "text.txxt",
        "path": "./syntaxes/txxt.tmLanguage.json"
      }
    ],
    "themes": [
      {
        "label": "txxt Dark",
        "uiTheme": "vs-dark",
        "path": "./themes/txxt-dark-theme.json"
      },
      {
        "label": "txxt Light",
        "uiTheme": "vs",
        "path": "./themes/txxt-light-theme.json"
      }
    ],
    "commands": [
      {
        "command": "txxt.formatDocument",
        "title": "txxt: Format Document",
        "category": "txxt"
      },
      {
        "command": "txxt.generateTOC",
        "title": "txxt: Generate Table of Contents",
        "category": "txxt"
      },
      {
        "command": "txxt.numberFootnotes",
        "title": "txxt: Number Footnotes",
        "category": "txxt"
      },
      {
        "command": "txxt.fullFormatting",
        "title": "txxt: Full Formatting",
        "category": "txxt"
      },
      {
        "command": "txxt.checkReferences",
        "title": "txxt: Check References",
        "category": "txxt"
      },
      {
        "command": "txxt.exportAsHtml",
        "title": "txxt: Export as HTML",
        "category": "txxt"
      },
      {
        "command": "txxt.fixNumbering",
        "title": "txxt: Fix Numbering",
        "category": "txxt"
      },
      {
        "command": "txxt.launch",
        "title": "txxt: Launch",
        "category": "txxt"
      }
    ],
    "keybindings": [
      {
        "command": "txxt.launch",
        "key": "ctrl+shift+l",
        "mac": "cmd+shift+l",
        "when": "editorTextFocus && editorLangId == 'txxt'"
      }
    ]
  },
  "activationEvents": [
    "onLanguage:txxt"
  ],
  "main": "./dist/extension.js",
  "scripts": {
    "clean": "rm -rf dist",
    "compile": "tsc -p ./ && cp -r src/core/txxt-syntax dist/src/core/",
    "watch": "tsc -watch -p ./",
    "pretest": ":",
    "test": "tsc -p ./tests && node ./dist/tests/runTest.js unit",
    "test:unit": "tsc -p ./tests && node ./dist/tests/runTest.js unit",
    "test:integration": "npm run compile && tsc -p ./tests && node ./dist/tests/runTest.js integration",
    "lint": "eslint src --ext ts",
    "package": "vsce package",
    "publish": "vsce publish",
    "build": "tsc -p ./",
    "prepare": "husky"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/txxt/txxt-format.git"
  },
  "homepage": "https://github.com/txxt/txxt-format",
  "bugs": {
    "url": "https://github.com/txxt/txxt-format/issues"
  },
  "author": "txxt Team",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.22.0",
    "@types/js-yaml": "^4.0.9",
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.11.30",
    "@types/vscode": "^1.98.0",
    "@typescript-eslint/eslint-plugin": "^8.26.1",
    "@typescript-eslint/parser": "^8.26.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "@vscode/vsce": "^3.2.2",
    "eslint": "^9.22.0",
    "eslint-plugin-prettier": "^5.2.3",
    "glob": "^10.3.10",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.0",
    "mocha": "^11.1.0",
    "prettier": "^3.5.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.2",
    "vscode-test": "^1.6.1",
    "vscode-textmate": "^9.2.0"
  },
  "dependencies": {
    "js-yaml": "^4.1.0"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "eslint --fix"
    ],
    "*.md": [
      "prettier --write"
    ],
    "*.{json,yaml,yml}": [
      "prettier --write"
    ]
  }
}
