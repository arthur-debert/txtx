#!/bin/bash

# Script to package the txxt extension as a .vsix file in the .dist/ directory
# Usage: ./bin/extension-compile

set -e

# Get the root directory of the project
ROOT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")/.." && pwd)"
DIST_DIR="${ROOT_DIR}/.dist"

# Create .dist directory if it doesn't exist
mkdir -p "${DIST_DIR}"

echo "Packaging txxt extension to ${DIST_DIR}..."

# Clean the dist directory
rm -rf "${DIST_DIR:?}"/*

# Ensure vsce is available
if ! command -v vsce &> /dev/null && [ -f "${ROOT_DIR}/node_modules/.bin/vsce" ]; then
    VSCE="${ROOT_DIR}/node_modules/.bin/vsce"
else
    VSCE="vsce"
fi

# Package the extension using vsce
echo "Creating VSIX package..."
cd "${ROOT_DIR}"
${VSCE} package -o "${DIST_DIR}/txxt-format.vsix"

echo "Packaging complete! Extension VSIX is ready in ${DIST_DIR}/txxt-format.vsix"