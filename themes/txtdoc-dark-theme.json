{
  "name": "txxt Dark",
  "type": "dark",
  "colors": {
    "editor.background": "#1E1E1E",
    "editor.foreground": "#FFF",
    "editorLineNumber.foreground": "#rgb(100, 100, 100)",
    "editor.selectionBackground": "#264F78",
    "editor.selectionHighlightBackground": "#2D2D30",
    "textBlockQuote.border": "#569CD6",
    "textBlockQuote.background": "#666",
    "textCodeBlock.background": "#0D0D0D50"
  },
  "tokenColors": [
    {
      "scope": "markup.heading.txxt",
      "settings": {
        "foreground": "#AAA",
        "fontStyle": "bold"
      }
    },
    {
      "scope": "entity.name.section.txxt",
      "settings": {
        "foreground": "#999",
        "fontStyle": "bold"
      }
    },
    {
      "scope": [
        "markup.list.unnumbered.txxt",
        "markup.list.numbered.txxt",
        "markup.list.lettered.txxt",
        "markup.list.roman.txxt"
      ],
      "settings": {
        "foreground": "#333"
      }
    },
    {
      "scope": [
        "markup.list.number.txxt",
        "markup.list.letter.txxt",
        "markup.list.roman.txxt"
      ],
      "settings": {
        "foreground": "#666",
        "fontStyle": "bold"
      }
    },
    {
      "scope": "markup.list.item.txxt",
      "settings": {
        "foreground": "#D4D4D4"
      }
    },
    {
      "scope": "markup.raw.block.txxt",
      "settings": {
        "foreground": "#999",
        "background": "#1E1E1E"
        
      }
    },
    {
      "scope": [
        "markup.quote.content.txxt",
        "markup.quote.nested.content.txxt"
      ],
      "settings": {
        "foreground": "#888",
        "fontStyle": "italic"
      }
    },
    {
      "scope": "markup.quote.nested.content.txxt",
      "settings": {
        "foreground": "#888",
        "fontStyle": "italic"
      }
    },
    {
      "scope": "markup.italic.txxt",
      "settings": {
        "fontStyle": "italic"
      }
    },
    {
      "scope": "markup.bold.txxt",
      "settings": {
        "fontStyle": "bold"
      }
    }
  ]
}