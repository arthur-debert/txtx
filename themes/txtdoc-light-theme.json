{
  "name": "txxt Light",
  "type": "light",
  "colors": {
    "editor.background": "#FFFFFF",
    "editor.foreground": "#000000",
    "editorLineNumber.foreground": "#999999",
    "editor.selectionBackground": "#ADD6FF",
    "editor.selectionHighlightBackground": "#E5EBF1",
    "textBlockQuote.border": "#FF0000",
    "textBlockQuote.background": "#0078D420",
    "textCodeBlock.background": "#00000010"
  },
  "tokenColors": [
    {
      "scope": "markup.heading.txxt",
      "settings": {
        "foreground": "#999",
        "background": "#AAA",
        "fontStyle": "bold"
      }
    },
    {
      "scope": "entity.name.section.txxt",
      "settings": {
        "foreground": "#666",
        "fontStyle": "bold"
      }
    },
    {
      "scope": [
        "markup.list.unnumbered.txxt",
        "markup.list.numbered.txxt",
        "markup.list.lettered.txxt",
        "markup.list.roman.txxt"
      ],
      "settings": {
        "foreground": "#A31515"
      }
    },
    {
      "scope": [
        "markup.list.number.txxt",
        "markup.list.letter.txxt",
        "markup.list.roman.txxt"
      ],
      "settings": {
        "foreground": "#098658",
        "fontStyle": "bold"
      }
    },
    {
      "scope": "markup.list.item.txxt",
      "settings": {
        "foreground": "#000000"
      }
    },
    {
      "scope": "markup.raw.block.txxt",
      "settings": {
        "foreground": "#795E26",
        "background": "#F6F6F6"
      }
    },
    {
      "scope": [
        "markup.quote.content.txxt",
        "markup.quote.nested.content.txxt"
      ],
      "settings": {
        "foreground": "#008000",
        "fontStyle": "italic"
      }
    },
    {
      "scope": "markup.quote.nested.content.txxt",
      "settings": {
        "foreground": "#006600",
        "fontStyle": "italic"
      }
    },
    {
      "scope": "markup.italic.txxt",
      "settings": {
        "foreground": "#AF00DB",
        "fontStyle": "italic"
      }
    },
    {
      "scope": "markup.bold.txxt",
      "settings": {
        "foreground": "#0000FF",
        "fontStyle": "bold"
      }
    }
  ]
}
